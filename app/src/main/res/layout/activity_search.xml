<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ansijaxapp.udacitylol.udacitylol.SearchActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputSummoneName_Text"
        android:hint="Summoner name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="true"
        android:layout_marginTop="77dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/search_button"
        android:onClick="startSearch"
        android:layout_alignTop="@+id/inputSummoneName_Text"
        android:layout_toRightOf="@+id/inputSummoneName_Text"
        android:layout_toEndOf="@+id/inputSummoneName_Text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to favorite"
        android:id="@+id/go_favorite"
        android:layout_below="@+id/search_button"
        android:onClick="goToFavorite"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
